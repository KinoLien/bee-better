
{% extends "layout.njk" %}

{% block headtitle %}{{ lang | trans("Daily") }} - {{ lang | trans("Create") }}{% endblock %}

{% block innercontent %}
<form method="POST" action="{{ currentpath }}">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content m-b-sm border-bottom form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ lang | trans("Date") }}</label>
                    <div class="col-sm-4">
                        <input type="text" id="daterangePicker" name="date" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ lang | trans("Device") }}</label>
                    <div class="col-sm-4">
                        <select data-placeholder="{{ lang | trans("Choose a Device") }}..." class="chosen-select" name="device" id="chosen-device" required>
                            <option value></option>
                            {% for dev in devices %}
                            <option value="{{ dev.id }}">{{ dev.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ lang | trans("Title") }} / {{ lang | trans("Summary") }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="title" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ lang | trans("Content") }} / {{ lang | trans("Description") }}</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="content" rows="7" style="resize: vertical; min-height:150px;"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row m-b-md">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-primary pull-right">{{ lang | trans("Create Log") }}</button>
        </div>
    </div>
</form>

{% endblock %}

{% block bodyjs %}
<script src="{{ '/assets/js/menu/daily/create.js' | appendStamp }}"></script>
{% endblock %}
