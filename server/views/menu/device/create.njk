
{% extends "layout.njk" %}

{% block headtitle %}Device - Create{% endblock %}

{% block innercontent %}
<form method="POST" action="{{ currentpath }}">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content m-b-sm border-bottom form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">ID</label>
                    <div class="col-sm-4">
                        <input type="text" name="cellid" class="form-control" required unique>
                        <span class="help-block m-b-none">The unique ID.</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-4">
                        <input type="text" name="name" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="chosen-users">Grant access to</label>
                    <div class="col-sm-4">
                        <select data-placeholder="Choose Users" name="grants" class="chosen-select" multiple id="chosen-users">
                            {% for user in users %}
                            <option value="{{ user.id }}">{{ user.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row m-b-md">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-primary pull-right">Create Device</button>
        </div>
    </div>
</form>

{% endblock %}

{% block bodyjs %}
<script src="{{ '/assets/js/menu/device/create.js' | appendStamp }}"></script>
{% endblock %}
